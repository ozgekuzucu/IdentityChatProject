@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}


<div class="container-fluid mt-3">
    <div class="col-12">
        <div class="card gradient-9" style="height:200px">
            <div class="card-body">
                <h3 class="card-title text-white"></h3>
                <br />
                <div class="d-inline-block">
                    <h2 id="clock" class="text-white"></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-1">
                <div class="card-body">
                    <h3 class="card-title text-white">Gelen Mesaj Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.v1</h2>
                        <p class="text-white mb-0">@DateTime.Now.ToShortDateString()</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-envelope"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-2">
                <div class="card-body">
                    <h3 class="card-title text-white">Okunmamış Mesaj Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.v2</h2>
                        <p class="text-white mb-0">@DateTime.Now.ToShortDateString()</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-envelope-square"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-3">
                <div class="card-body">
                    <h3 class="card-title text-white">Okunmuş Mesaj Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.v3</h2>
                        <p class="text-white mb-0">@DateTime.Now.ToShortDateString()</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-envelope-open"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-4">
                <div class="card-body">
                    <h3 class="card-title text-white">Gönderilen Mesaj Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.v4</h2>
                        <p class="text-white mb-0">@DateTime.Now.ToShortDateString()</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-plane"></i></span>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-5">
                <div class="card-body">
                    <h3 class="card-title text-white">Gelen Son Mesaj</h3>
                    <div class="d-inline-block">
                        <h4 class="text-white">Gönderen: @ViewBag.LastMessage.SenderEmail</h4>
                        <p class="text-white mb-0">Konu: @ViewBag.LastMessage.Subject</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-6">
                <div class="card-body">
                    <h3 class="card-title text-white">Gönderilen Son Mesaj</h3>
                    <div class="d-inline-block">
                        <h4 class="text-white">Gönderen: @ViewBag.LastSendMessage.SenderEmail</h4>
                        <p class="text-white mb-0">Konu: @ViewBag.LastSendMessage.Subject</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-7" style="height: 83%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                <div class="card-body">
                    <h2 class="card-title text-white" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">Yeni Mesaj Oluştur</h2>
                    <h4 class="text-white"></h4>
                    <p class="text-white mb-0"></p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-8" style="height: 83%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                <div class="card-body">
                    <h2 class="card-title text-white" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">Profilim</h2>
                    <h4 class="text-white"></h4>
                    <p class="text-white mb-0"></p>
                </div>
            </div>
        </div>

    </div>
    

</div>

<script>
    function updateClock() {
        const clockElement = document.getElementById("clock");
        const now = new Date();
        let hours = now.getHours();
        let minutes = now.getMinutes();
        let seconds = now.getSeconds();

        // Saat formatını 2 haneli yapmak için 0 ekleme
        hours = hours < 10 ? '0' + hours : hours;
        minutes = minutes < 10 ? '0' + minutes : minutes;
        seconds = seconds < 10 ? '0' + seconds : seconds;

        // Saatin görüntülenmesi
        clockElement.textContent = `${hours}:${minutes}:${seconds}`;
    }

    // Saati her saniye güncelle
    setInterval(updateClock, 1000);

    // Sayfa yüklenince ilk saati hemen göster
    updateClock();
</script>

<style>
    #clock {
        font-size: 100px; /* Saatin boyutunu büyüttük */
        font-weight: bold;
        color: #FF5733; /* Saatin rengini değiştirebilirsiniz */
        text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.7); /* Gölgelendirme */
        letter-spacing: 5px; /* Harf aralığını arttırdık */
        text-align: center; /* Ortalanmasını sağladık */
    }

    .card {
        display: flex;
        align-items: center; /* Kartın dikeyde ortalanmasını sağladık */
        justify-content: center; /* Kartın yatayda ortalanmasını sağladık */
    }
</style>

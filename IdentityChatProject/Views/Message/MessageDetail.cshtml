@model IdentityChatProject.Entities.Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @await Component.InvokeAsync("_MessageSidebarComponentPartial")
                    <div class="email-right-box">
                        <div class="read-content">
                            <div class="media pt-5">
                                <img class="mr-3 rounded-circle" src="images/avatar/1.jpg">
                                <div class="media-body">
                                    <h5 class="m-b-3">@Model.SenderEmail</h5>
                                    <p class="m-b-2">@Model.SendDate.ToShortDateString()</p>
                                </div>

                            </div>
                            <hr>
                            <div class="media mb-4 mt-1">
                                <div class="media-body">
                                    <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">To:@Model.ReceiverEmail</small>
                                </div>
                            </div>
                            <p>@Model.MessageDetail</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


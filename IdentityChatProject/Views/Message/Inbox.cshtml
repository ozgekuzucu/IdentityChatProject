@model List<IdentityChatProject.Entities.Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @await Component.InvokeAsync("_MessageSidebarComponentPartial")
                    <div class="email-right-box">
                        <div role="toolbar" class="toolbar">
                            <div class="btn-group">
                                <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                                    More <span class="caret m-l-5"></span>
                                </button>
                            </div>
                        </div>
                        <div class="email-list m-t-15">
                            @foreach (var item in Model)
                            {
                                count++;
                                <div class="message">
                                    <a href="/Message/MessageDetail/@item.MessageId">
                                        <div class="col-mail col-mail-1">
                                            <div class="email-checkbox">
                                                <span class="star-toggle ti-star">@count</span>
                                            </div>
                                        </div>
                                        <div class="col-mail col-mail-2">
                                            <span style="color:darkblue; margin-right: 50px;"><strong>Konu:</strong> @item.Subject</span>
                                            <span class="text-muted">@((item.MessageDetail?.Length ?? 0) > 50 ? item.MessageDetail.Substring(0, 50) + "..." : item.MessageDetail)</span>
                                            <div class="date">@item.SendDate.ToShortDateString()</div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>